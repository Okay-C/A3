<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/styles.css">
  <title>Edit Assignment</title>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container"> <!-- Edit assignment menu-->
    <h1>Edit Assignment</h1>
    <form action="/assignments/<%= assignment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="title">Title:</label>
        <input 
          type="text" 
          id="title" 
          name="title" 
          class="form-control" 
          value="<%= assignment.title %>" 
          required>
      </div>

      <div class="form-group">
        <label for="description">Description:</label>
        <textarea 
          id="description" 
          name="description" 
          class="form-control" 
          rows="4"><%= assignment.description %></textarea>
      </div>

      <div class="form-group">
        <label for="dueDate">Due Date:</label>
        <input 
          type="date" 
          id="dueDate" 
          name="dueDate" 
          class="form-control" 
          value="<%= assignment.dueDate.toISOString().split('T')[0] %>">
      </div>

      <div class="form-group">
        <label for="status">Status:</label>
        <select 
          id="status" 
          name="status" 
          class="form-control">
          <option value="Pending" <%= assignment.status === 'Pending' ? 'selected' : '' %>>Pending</option> 
          <option value="Completed" <%= assignment.status === 'Completed' ? 'selected' : '' %>>Completed</option>
        </select>
      </div>

      <button type="submit" class="btnform">Update Assignment</button> <!-- Update assignment button-->
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
